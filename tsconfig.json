{
    "compilerOptions": {
      "target": "ES6",
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "noEmit": true,
      "esModuleInterop": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "preserve",
      "incremental": true,
      "baseUrl": ".",
      "paths": {
        "@/components/*": ["components/*"],
        "@/util/*":["util/*"],
        "@styles/*":["styles/*"],
        "@context/*":["context/*"],
        "@api/*":["api/*"]
      }
      
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "context/context.js"],
    "exclude": ["node_modules"],
    
  }